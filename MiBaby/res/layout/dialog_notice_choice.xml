<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/notice_dialog_share"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_weight="1"
        android:drawableTop="@drawable/share"
        android:text="@string/notice_dialog_share" >
    </TextView>

    <TextView
        android:id="@+id/notice_dialog_edit"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_weight="1"
        android:drawableTop="@drawable/edit"
        android:text="@string/notice_dialog_share" >
    </TextView>

    <TextView
        android:id="@+id/notice_dialog_delete"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_weight="1"
        android:drawableTop="@drawable/delete"
        android:text="@string/notice_dialog_share" >
    </TextView>

    <TextView
        android:id="@+id/notice_dialog_details"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_weight="1"
        android:drawableTop="@drawable/details"
        android:text="@string/notice_dialog_share" >
    </TextView>

</LinearLayout>